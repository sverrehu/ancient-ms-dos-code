PROG1    = TETRIS
CMODEL   = t
AMODEL   = TINY

# DEBUG  = /V
# LNKMAP = -M

!if !$d(LANG)
LANG     = NORWEGIAN
!endif

CSWITCH  = -m$(CMODEL) -c -d -a -G -Z -O -v -D$(LANG)
ASWITCH  = /ml /zi /m2 /d$(LANG) /dMDL=$(AMODEL)

LIBS     =
OBJS     = TIMER.OBJ PROCESS.OBJ SCREENLW.OBJ CHARDATA.OBJ RANDOM.OBJ \
           OBJECTS.OBJ BOARD.OBJ MOVEOBJ.OBJ KEYLW.OBJ MOVEPROC.OBJ   \
           KEYPROC.OBJ SCREEN.OBJ SCORE.OBJ OBJDATA.OBJ LOGO.OBJ LOGODATA.OBJ



.AUTODEPEND




$(PROG1).COM: $(PROG1).OBJ $(OBJS)
    TLINK /T/X/C$(DEBUG) $(PROG1).OBJ @OBJS.MAK, $(PROG1), , $(LIBS)



.ASM.OBJ:
    TASM $(ASWITCH) $<

.C.OBJ:
    TCC $(CSWITCH) {$< }

.CPP.OBJ:
    TCC $(CSWITCH) {$< }
